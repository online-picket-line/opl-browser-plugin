{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.stryker.config.js",
    "enableFindRelatedTests": false
  },
  "coverageAnalysis": "all",
  "mutate": [
    "background.js",
    "block.js",
    "content.js",
    "popup.js"
  ],
  "thresholds": {
    "high": 60,
    "low": 40,
    "break": null
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "concurrency": 2,
  "ignorePatterns": [
    "node_modules/**",
    "coverage/**",
    "dist/**",
    ".git/**",
    "*.md"
  ]
}
