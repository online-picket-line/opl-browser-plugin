{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "dashboard"
  ],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "package.json",
    "enableFindRelatedTests": true
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "background.js",
    "block.js",
    "content.js",
    "popup.js",
    "migration-helper.js"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "concurrency": 2,
  "ignorePatterns": [
    "node_modules/**",
    "coverage/**",
    "dist/**",
    ".git/**",
    "*.md"
  ]
}
