{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "dashboard"
  ],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "package.json",
    "enableFindRelatedTests": true
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "api-service.js",
    "background.js",
    "block.js",
    "content.js",
    "popup.js",
    "migration-helper.js"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "maxConcurrentTestRunners": 2,
  "ignorePatterns": [
    "node_modules",
    "coverage",
    "dist",
    "tests",
    "*.test.js",
    "*.config.js",
    "browser-polyfill.js",
    "generate-icons.js",
    "update-service.js",
    "test-import.js",
    "api-test.js"
  ]
}
