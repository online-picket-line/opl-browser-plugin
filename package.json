{
  "name": "opl-browser-plugin",
  "version": "1.0.0",
  "description": "Browser plugin for Online Picket Line",
  "main": "api-service.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sharp": "^0.34.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "*.js",
      "!browser-polyfill.js",
      "!generate-icons.js",
      "!update-service.js",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
