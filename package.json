{
  "name": "opl-browser-plugin",
  "version": "2.0.0",
  "description": "Browser extension to inform users about labor actions and boycotts",
  "main": "api-service.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/jest-runner": "^9.4.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli": "^0.47.0",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "*.js",
      "!browser-polyfill.js",
      "!generate-icons.js",
      "!update-service.js",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "reporters": [
      "<rootDir>/tests/dot-reporter.js"
    ]
  }
}
